{
  "name": "xeno-public-release",
  "version": "1.0.0",
  "description": "Open source voice-activated therapeutic assistant for emotional support and companionship",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "xeno-public-release": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "dev:index": "ts-node src/index.ts",
    "start:continuous": "./start-continuous.sh",
    "dev:continuous": "NODE_ENV=development ./start-continuous.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist coverage .nyc_output *.log",
    "clean:all": "./cleanup.sh",
    "install:setup": "./install.sh",
    "docker:build": "docker build -t xeno-public-release .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "verify": "npm run lint && npm run test && npm run build",
    "postinstall": "echo 'Dependencies installed. Run ./install.sh for complete setup or see INSTALLATION_GUIDE.md for manual configuration.'"
  },
  "keywords": [
    "ai",
    "wellness",
    "companion",
    "voice",
    "therapy",
    "raspberry-pi",
    "open-source",
    "xeno",
    "mental-health",
    "therapeutic-ai"
  ],
  "author": "Chaitanya Mishra",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.10",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@google-cloud/speech": "^6.5.0",
    "@google-cloud/text-to-speech": "^5.3.0",
    "@picovoice/porcupine-node": "^3.0.6",
    "@picovoice/pvrecorder-node": "^1.2.8",
    "@types/crypto-js": "^4.2.2",
    "audio-buffer": "^5.0.0",
    "crypto-js": "^4.2.0",
    "form-data": "^4.0.4",
    "lamejs": "^1.2.1",
    "sqlite3": "^5.1.0",
    "uuid": "^11.1.0"
  }
}
